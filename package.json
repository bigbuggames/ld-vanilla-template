{
  "name": "ld-vanilla-template",
  "version": "0.0.1",
  "description": "template for vanilla javascript project",
  "homepage": "https://bigbuggames.github.io/ld-vanilla-template",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "parcel serve ./src/index.html --port 3000",
    "prod": "npm run clean && parcel build ./src/index.html --no-source-maps --public-url /ld-vanilla-template",
    "publish": "npm run clean && npm run prod && gh-pages -d dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "gh-pages": "^2.1.1",
    "howler": "^2.1.2",
    "husky": "^3.0.7",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^3.0.0",
    "seedrandom": "^3.0.5"
  }
}
